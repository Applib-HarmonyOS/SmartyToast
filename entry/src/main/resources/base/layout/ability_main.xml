<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_done"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:align_parent_top="true"
        ohos:background_element="#A9A9A9"
        ohos:text="Done"/>
    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_error"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:right_of="$id:btn_done"
        ohos:background_element="#A9A9A9"
        ohos:text="Error"/>
    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_warning"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:right_of="$id:btn_error"
        ohos:background_element="#A9A9A9"
        ohos:text="Warning"/>
    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_connected"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:below="$id:btn_done"
        ohos:background_element="#A9A9A9"
        ohos:text="Connected"/>
    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_update"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:right_of="$id:btn_connected"
        ohos:below="$id:btn_done"
        ohos:background_element="#A9A9A9"
        ohos:text="Update"/>
    <Button
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:id="$+id:btn_saved"
        ohos:margin="15vp"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:right_of="$id:btn_update"
        ohos:below="$id:btn_done"
        ohos:background_element="#A9A9A9"
        ohos:text="Saved"/>

</DependentLayout>